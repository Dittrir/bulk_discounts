<h1>Edit <%= @item.name %></h1>

<%= form_with url: merchant_item_path, method: :patch, local: true do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :unit_price %>
    <%= f.text_field :unit_price %>
  </p>

  <%= f.submit "Submit"%>
<% end %>
